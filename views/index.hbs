{{#extend "application" }}

{{#content "body" }}
<div class="container px2">
  <h3>
    ng tracks
    {% tracks.length %}
    {% tracks[0].title %}
    {% tracks[0].url %}
  </h3>
  <ul class="list-reset" tracklist>
    {{#each tracks }}
      <li class="flex flex-center mxn2 border-bottom"
        data-url="{{ stream_url }}?client_id={{ ../client_id }}"
        data-title="{{ title }}"
        data-index="{{ @index }}">
        <a href="#!"
          class="flex-grow col-10 button button-nav-light"
          ng-click="play({{ @index }})">
          <p class="h5 regular m0">
            {{date created_at }}
          </p>
          <h2 class="h3 bold m0">{{ title }}</h2>
        </a>
        <a href="{{ permalink_url }}" class="button button-nav-light" target="_blank">
          &raquo;
        </a>
      </li>
    {{/each}}
  </ul>
</div>
{{/content}}

{{/extend}}
